<layout version="1.0.1">   
     
    <default>
        <reference name="head">
              <action method="addJs" ifconfig="quickview/settings/enabled" ifvalue="1"><script>belvg/quickview.js</script></action>
			  <action method="addCss"><stylesheet>css/quickview.css</stylesheet></action>
        </reference>
		<reference name="before_body_end">
			<block type="quickview/script"	template="quickview/script.phtml">				
			</block>
		</reference>
    </default>  
	<catalog_category_layered translate="label">        
		<reference name="content"> 
			<reference name="category.products">
                <reference  name="product_list">
					<action method="setTemplate" ifconfig="quickview/settings/enabled" ifvalue="1"><template>quickview/list.phtml</template></action>
				</reference>
			</reference>	
		</reference>		
	</catalog_category_layered>	
	
	<catalog_category_default translate="label">        
		<reference name="content"> 
			<reference name="category.products">
                <reference  name="product_list">
					<action method="setTemplate" ifconfig="quickview/settings/enabled" ifvalue="1"><template>quickview/list.phtml</template></action>
				</reference>
			</reference>	
		</reference>		
	</catalog_category_default>
	

  

</layout>   
	