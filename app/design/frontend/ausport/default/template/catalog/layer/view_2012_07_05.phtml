/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php if($this->canShowBlock()): ?>
<div class="block block-layered-nav">
    <div class="block-content">
        <?php echo $this->getStateHtml() ?>
        <?php if($this->canShowOptions()): ?>
            <dl id="narrow-by-list">
                <?php $_filters = $this->getFilters() ?>
                <?php foreach ($_filters as $_filter): ?>
                <?php if($_filter->getItemsCount()): ?>
                    <dt><?php echo $this->__($_filter->getName()) ?></dt>
                    <dd><?php echo $_filter->getHtml() ?></dd>
					<div class="clear"></div>
                <?php endif; ?>
                <?php endforeach; ?>
            </dl>
            <script type="text/javascript">decorateDataList('narrow-by-list')</script>
        <?php endif; ?>
    </div>
</div>
<?php endif; ?>
<div class="block block-layered-nav">
    <div class="block-content">
		<dl id="narrow-by-list">
			<dt for="amount">Price range:</dt>
			<input type="text" id="amount" style="border:0; color:#f6931f; font-weight:bold;" />
			<div id="slider-range"></div>
		</dl>
		<button id="pr-filter" style="display:block;margin:16px auto;border:0px;">Filter</button>
	</div>
</div>
<script>
	var jq = jQuery.noConflict();
	jq(function($) {
		$( "#slider-range" ).slider({
			range: true,
			min: 0,
			max: 200,
			values: [ 0, 200 ],
			slide: function( event, ui ) {
				$( "#amount" ).val( "$" + ui.values[ 0 ] + " - $" + ui.values[ 1 ] );
			}
		});
		$( "#amount" ).val( "$" + $( "#slider-range" ).slider( "values", 0 ) +
			" - $" + $( "#slider-range" ).slider( "values", 1 ) );
		$("#pr-filter").click(function() {
			var prmin = $( "#slider-range" ).slider( "values", 0 );
			var prmax = $( "#slider-range" ).slider( "values", 1 );
			var prurl = "?price=" + prmin + "-" + prmax;
			window.location.href=prurl;
		});
	});
</script>
