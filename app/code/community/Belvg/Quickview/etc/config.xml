<config>
    <modules>
        <Belvg_Quickview>
            <version>1.0.1</version>
        </Belvg_Quickview>
    </modules>
    <frontend>
        <routers>
            <quickview>
                <use>standard</use>
                <args>
                    <module>Belvg_Quickview</module>
                    <frontName>quickview</frontName>
                </args>
            </quickview>
        </routers>
        <layout>
            <updates>
                <quickview>
                    <file>quickview.xml</file>
                </quickview>
            </updates>
        </layout>
    </frontend>
    <global> 
        <helpers>
            <quickview>
                <class>Belvg_Quickview_Helper</class>
            </quickview>
        </helpers>    
        <blocks>   
           <quickview>
			    <class>Belvg_Quickview_Block</class>
		    </quickview>
        </blocks>        
    </global>  
	<default>
		<quickview>
			<settings>
				<enabled>0</enabled>
			</settings>				
			<frontend>	
				<width>680</width>
				<height>500</height>
				<imagesize>250</imagesize>				
			</frontend>			
		</quickview>
	</default>	
</config> 