<?xml version="1.0"?>
<config>
    <!--
    /**
    * @category     Inchoo
    * @package     Inchoo Featured Products
    * @authors       Mladen Lotar <mladen.lotar@surgeworks.com>, Vedran Subotic <vedran.subotic@surgeworks.com>
    */
    -->
    <tabs>
        <inchoo module="inchoo_notes">
            <label>Inchoo</label>
            <sort_order>110</sort_order>
        </inchoo>
    </tabs>
    <sections>
        <inchoo_notes_general translate="label" module="inchoo_notes">
            <label>Notifications</label>
            <tab>inchoo</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <feed>
                    <label>Notifications</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <notify translate="label">
                            <label>Keep me informed about important notifications:</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </notify>
                    </fields>
                </feed>
            </groups>
        </inchoo_notes_general>
        <inchoo_general translate="label" module="inchoo_notes">
            <label>General</label>
            <tab>inchoo</tab>
            <frontend_type>text</frontend_type>
            <sort_order>99999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <extensions translate="label" module="inchoo_notes">
                    <label>Installed Inchoo Extensions</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <version translate="label">
                            <label>Featured Products:</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>inchoo_notes/system_config_form_fieldset_notes_extensions</frontend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </version>
                    </fields>
                </extensions>
            </groups>
        </inchoo_general>
    </sections>
</config>